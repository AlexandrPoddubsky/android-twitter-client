<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView 
		android:id="@+id/bg_image"
		android:layout_height="wrap_content"
		android:scaleType="center" android:layout_weight="1.0" android:layout_width="fill_parent"/>
		
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:padding="10px">

	    <TextView android:id="@+id/label" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="What's happening?" />
	
	    <EditText android:id="@+id/entry" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:background="@android:drawable/editbox_background"
		    android:layout_below="@id/label" />
	  
	    <Button android:id="@+id/btn_clear_credentials" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_below="@id/entry"
		    android:text="Sign out" />
	
	    <Button android:id="@+id/btn_tweet" 
	    	android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/btn_clear_credentials"
		    android:layout_alignTop="@+id/btn_clear_credentials"
		    android:layout_alignParentRight="true"
		    android:text="Submit" />
		    
	</RelativeLayout>

</LinearLayout>
